<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    tools:context=".games.NintendoSwitchGames">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">

            <ImageView
                android:id="@+id/backHome1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/back_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nintendo Switch Games"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/readex_pro"
                android:textStyle="bold"
                android:layout_gravity="center" />

        </FrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="80dp">

                <LinearLayout
                    android:id="@+id/nintendoSwitchGameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp">

                    <TextView
                        android:id="@+id/nintendoSwitchGameTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Stickman Fight"
                        android:textSize="20sp"
                        android:fontFamily="@font/syne"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/contentDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="45dp"
                        android:layout_marginEnd="45dp"
                        android:src="@drawable/white_content_divider" />

                    <ImageView
                        android:id="@+id/nintendoSwitchGameImg"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginEnd="55dp"
                        android:src="@drawable/scrabble" />

                    <TextView
                        android:id="@+id/nintendoSwitchGameDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textAlignment="center"
                        android:text="@string/boardGameDesc"
                        android:textSize="14sp"
                        android:fontFamily="@font/syne"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nintendoSwitchGameLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="40dp">

                    <TextView
                        android:id="@+id/nintendoSwitchGameTitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Mario Kart"
                        android:textSize="20sp"
                        android:fontFamily="@font/syne"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/contentDivider2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="45dp"
                        android:layout_marginEnd="45dp"
                        android:src="@drawable/white_content_divider" />

                    <ImageView
                        android:id="@+id/nintendoSwitchGameImg2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginEnd="55dp"
                        android:src="@drawable/scrabble" />

                    <TextView
                        android:id="@+id/nintendoSwitchGameDesc2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textAlignment="center"
                        android:text="@string/boardGameDesc2"
                        android:textSize="14sp"
                        android:fontFamily="@font/syne"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</FrameLayout>