<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    tools:context=".account.PrivacyPolicy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="25dp">

            <ImageView
                android:id="@+id/backAccount3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/back_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/readex_pro"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginStart="5dp" />

        </FrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="80dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Information We Collect"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/red_hat_display_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/privpol1"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/red_hat_display"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/privpol1_1"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/red_hat_display"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="@string/privpol1_2"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/red_hat_display"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. How We Use Your Information"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/red_hat_display_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/privpol2"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/red_hat_display"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/privpol2_1"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/red_hat_display"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Sharing of Information"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/red_hat_display_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/privpol3"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/red_hat_display"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/privpol3_1"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/red_hat_display"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/privpol4"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/red_hat_display"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</FrameLayout>