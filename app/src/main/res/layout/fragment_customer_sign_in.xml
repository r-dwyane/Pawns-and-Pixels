<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/admin_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    app:backgroundTint="@null"
    android:elevation="0dp"
    tools:context=".authentication.CustomerSignInFragment">

    <RelativeLayout
        android:id="@+id/progressContainer3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_gravity="center"
        android:background="#66F21B5C"
        android:elevation="9999dp">

        <ImageView
            android:id="@+id/progressImage3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_clear"
            android:elevation="10000dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="@null"
        android:background="@drawable/bottomsheet"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:fontFamily="@font/readexpro_semibold"
            android:textSize="32sp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back!"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textSize="15sp"
            android:textColor="@color/white"
            />
        <EditText
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:background="@drawable/textfield_selector"
            android:fontFamily="@font/redhatdisplay_regular"
            android:hint="Email Address:"
            android:textSize="14sp"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/textfield_selector"
            android:fontFamily="@font/redhatdisplay_regular"
            android:hint="Password:"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_marginTop="15sp"
            android:layout_gravity="right"
            />
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:fontFamily="@font/readexpro_semibold"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginTop="20sp"
            app:backgroundTint="@null"
            />
        <TextView
            android:id="@+id/signup_portal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginTop="15sp"
            android:layout_gravity="center"
            />
    </LinearLayout>
</FrameLayout>