<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/page_background"
    android:elevation="9998dp"
    tools:context=".reservations.ReservationSummary">

    <RelativeLayout
        android:id="@+id/progressContainerSummary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_gravity="center"
        android:background="#66F21B5C"
        android:elevation="9999dp">

        <ImageView
            android:id="@+id/progressImage3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_clear"
            android:elevation="10000dp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:id="@+id/backHome4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back_button"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation Summary"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/readex_pro"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:background="@drawable/dark_bg">

            <TextView
                android:id="@+id/room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Room:"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/redhatdisplay_bold"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/content_divider"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="20dp"
                android:text="Date:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/redhatdisplay_regular"/>

            <TextView
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp"
                android:text="Start Time:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/redhatdisplay_regular"/>

            <TextView
                android:id="@+id/endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp"
                android:text="End Time:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/redhatdisplay_regular"/>

            <TextView
                android:id="@+id/players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp"
                android:text="Number of Players:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/redhatdisplay_regular"/>

            <TextView
                android:id="@+id/customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp"
                android:text="Name:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/redhatdisplay_bold"/>

            <TextView
                android:id="@+id/customerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:text="Email:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/redhatdisplay_bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Confirm"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/readexpro_semibold"
            android:background="@drawable/button_selector"
            app:backgroundTint="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/redhatdisplay_regular"
            android:text="@string/terms_condition"
            />

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>