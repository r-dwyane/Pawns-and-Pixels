<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/admin_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:backgroundTint="@null"
    tools:context=".authentication.AdminSignInFragment">

    <RelativeLayout
        android:id="@+id/progressContainer2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_gravity="center"
        android:background="#66F21B5C"
        android:elevation="9999dp">

        <ImageView
            android:id="@+id/progressImage3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_clear"
            android:elevation="10000dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottomsheet"
        android:layout_gravity="bottom"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:backgroundTint="@null"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Sign In"
            android:fontFamily="@font/readexpro_semibold"
            android:textSize="32sp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back Admin!"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textSize="15sp"
            android:textColor="@color/white"
            />
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:background="@drawable/textfield_selector"
            android:fontFamily="@font/redhatdisplay_regular"
            android:hint="Username:"
            android:textSize="17sp"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/textfield_selector"
            android:fontFamily="@font/redhatdisplay_regular"
            android:hint="Password:"
            android:textSize="17sp"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/admin_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:fontFamily="@font/readexpro_semibold"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginTop="20sp"
            app:backgroundTint="@null"
            />
    </LinearLayout>
</FrameLayout>