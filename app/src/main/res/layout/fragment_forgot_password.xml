<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/admin_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@null"
    tools:context=".authentication.ForgotPasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomsheet"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:fontFamily="@font/readexpro_semibold"
            android:textSize="30sp"
            android:textColor="@color/white" />
        <EditText
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/textfield_selector"
            android:fontFamily="@font/redhatdisplay_regular"
            android:hint="Email Address:"
            android:textSize="14sp"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/send_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:fontFamily="@font/readexpro_semibold"
            android:text="Send Reset Link"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginTop="20sp"
            app:backgroundTint="@null" />
        <TextView
            android:id="@+id/signup_portal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginTop="15sp"
            android:layout_gravity="center" />
    </LinearLayout>
</FrameLayout>