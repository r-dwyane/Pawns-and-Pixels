<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cancel_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="40dp"
    android:padding="20dp"
    android:background="@drawable/page_round"
    android:clipToOutline="true"
    app:backgroundTint="@color/transparent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to decline?"
        android:textSize="18sp"
        android:fontFamily="@font/readexpro_semibold"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please provide a reason why."
        android:textSize="14sp"
        android:fontFamily="@font/readexpro_semibold"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_gravity="center"/>


    <EditText
        android:id="@+id/reason"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textSize="12sp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/textfield_selector2"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/confirmCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Confirm"
        android:textColor="@color/white"
        android:fontFamily="@font/readex_pro"
        android:textStyle="bold"
        android:background="@drawable/button_selector"
        app:backgroundTint="@null"/>

    <Button
        android:id="@+id/noConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Cancel"
        android:textColor="@color/white"
        android:fontFamily="@font/readex_pro"
        android:textStyle="bold"
        android:background="@drawable/button_selector2"
        app:backgroundTint="@null"/>

</LinearLayout>