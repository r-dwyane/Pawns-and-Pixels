<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/admin_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@null"
    tools:context=".authentication.CustomerSignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomsheet"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:fontFamily="@font/readexpro_semibold"
            android:textSize="32sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's create an account!"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:background="@drawable/textfield_selector"
            android:fontFamily="@font/redhatdisplay_regular"
            android:hint="Name:"
            android:textSize="14sp"
            android:padding="12dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@drawable/textfield_selector"
            android:fontFamily="@font/redhatdisplay_regular"
            android:hint="Email Address:"
            android:textSize="14sp"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@drawable/textfield_selector"
            android:fontFamily="@font/redhatdisplay_regular"
            android:hint="Contact Number:"
            android:textSize="14sp"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/textfield_selector"
            android:fontFamily="@font/redhatdisplay_regular"
            android:hint="Password:"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/password_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/textfield_selector"
            android:fontFamily="@font/redhatdisplay_regular"
            android:hint="Re-enter Password:"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms_and_conditions_text"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textSize="10sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginTop="20sp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:fontFamily="@font/readexpro_semibold"
            android:text="Create Account"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginTop="15sp"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/signin_portal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_have_an_account"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginTop="15sp"
            android:layout_gravity="center" />

    </LinearLayout>
</FrameLayout>