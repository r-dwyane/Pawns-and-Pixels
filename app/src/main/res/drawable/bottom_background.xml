<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/white"
                android:endColor="#10FFFFFF"
                android:angle="270"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>

    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/pinkBg"
                android:endColor="@color/blueBg"
                android:angle="270"/>
            <corners
                android:radius="50dp"/>
        </shape>
    </item>

</layer-list>